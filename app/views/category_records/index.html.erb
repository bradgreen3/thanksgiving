<h1>Listing category records</h1>

<table>
  <thead>
    <tr>
      <th>Recipient</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @category_records.each do |category_record| %>
      <tr>
        <td><%= link_to category_record.recipient, category_record.recipient %></td>
        <td><%= category_record.category %></td>
        <td><%= link_to 'Show', category_record %></td>
        <td><%= link_to 'Edit', edit_category_record_path(category_record) %></td>
        <td><%= link_to 'Destroy', category_record, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

