<%= form_for(@donation) do |f| %>
  <% if @donation.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@donation.errors.count, "error") %> prohibited this donation from being saved:</h2>

      <ul>
      <% @donation.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :amount %><br>
    <%= f.text_field :amount %>
  </div>
  <div class="field">
    <%= f.label :recipient_id %><br>
    <%= f.select :recipient_id, Recipient.all.map { |r| [r.to_s, r.id] } %>
    <%= link_to 'Add new recipient', new_recipient_path %>
  </div>
  <div class="field">
    <%= f.label :date %><br>
    <%= f.date_select :date %>
  </div>
  <div class="field">
    <%= f.label :method %><br>
    <%= f.select :method, Donation.method_select_options %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
